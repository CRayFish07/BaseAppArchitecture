<?xml version="1.0" encoding="utf-8"?>
<lib.homhomlib.design.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background_view="@layout/bg_sliding_refresh"
    app:sliding_mode="both"
    app:sliding_pointer_mode="more">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:divider="@drawable/layout_divider_line"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <TextView
            android:id="@+id/tv_brokerage_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="@dimen/margin_normal"
            android:text="佣金调整记录" />

        <TextView
            android:id="@+id/tv_switch_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:padding="@dimen/margin_normal"
            android:text="Switch切换开关实例" />

        <TextView
            android:id="@+id/tv_custom_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:padding="@dimen/margin_normal"
            android:text="自定义键盘" />

        <TextView
            android:id="@+id/tv_js_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/margin_normal"
            android:text="JS-Native互调" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notification_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@android:color/holo_green_dark"
                android:padding="@dimen/margin_normal"
                android:text="弹出通知" />

            <TextView
                android:id="@+id/tv_notification_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:padding="@dimen/margin_normal"
                android:text="隐藏通知" />
        </LinearLayout>
    </LinearLayout>


</lib.homhomlib.design.SlidingLayout>